{% if archive.version %}
    {% set version = archive.version %}
{% endif %}

{% if not version %}
    {% set version = 1 %}
{% endif %}

{% include 'html-head.njk' %}

<body>
    <a href="#main-content" class="skip-to-content">Skip to main content</a>

    {% include 'header.njk' %}

    <div class="wrapper">
        {% include 'sidebar.njk' %}

        <div class="main-container">
            {% include 'version-note.njk' %}

            <main id="main-content">
                {% block content %}
                {% endblock %}
            </main>
        </div>
    </div>

    {% include 'scripts-footer.njk' %}
</body>
